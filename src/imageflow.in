import gettext
import locale
import os
import signal
import sys

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)

locale.bindtextdomain('imageflow', localedir)
locale.textdomain('imageflow')

gettext.bindtextdomain('imageflow', localedir)
gettext.textdomain('imageflow')
gettext.install('imageflow', localedir)

if __name__ == '__main__':
    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(
        pkgdatadir, 'imageflow.gresource'))
    resource._register()

    from imageflow import main
    sys.exit(main.main(VERSION))
